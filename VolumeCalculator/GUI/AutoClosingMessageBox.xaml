<Window x:Class="VolumeCalculatorGUI.GUI.AutoClosingMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Caption}" MinHeight="100" MinWidth="200" x:ClassModifier="internal"
        ShowInTaskbar="False"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Loaded="OnWindowLoaded"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True">
	<Border  BorderBrush="Black" BorderThickness="3">
		<Grid>
			<TextBlock Text="{Binding Caption}" Margin="10,0,0,0"/>
			<TextBlock Margin="20,10" MaxWidth="300" TextWrapping="Wrap"  FontSize="20" Text="{Binding Text}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Grid>
	</Border>
</Window>
